    <script defer>
      window.addEventListener('load', () => {
        document.querySelector('#map').style.height = `${(window.innerHeight / 2) | 0}px`;

        var beehiveIcon = L.icon({
          iconUrl: '../img/icon-beehive-map.png',
          iconSize:     [50, 100], // size of the icon
          shadowSize:   [50, 134], // size of the shadow
          iconAnchor:   [25, 100], // point of the icon which will correspond to marker's location
          shadowAnchor: [4, 62],  // the same for the shadow
          popupAnchor:  [-3, -76] // point from which the popup should open relative to the iconAnchor
      });
    
        const map = L.map('map', { scrollWheelZoom: false }).setView([45.7865, 4.764], 3);
        L.tileLayer(
          'https://server.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer/tile/{z}/{y}/{x}',
          {
            attribution:
              'Tiles &copy; Esri &mdash; Source: Esri, DeLorme, NAVTEQ, USGS, Intermap, iPC, NRCAN, Esri Japan, METI, Esri China (Hong Kong), Esri (Thailand), TomTom, 2012'
          }

        ).addTo(map);

        L.marker([45.78715, 4.7637], {icon: beehiveIcon}).addTo(map);
        
        beehiveIcon.bindPopup("<b>Hello world!</b><br>I am a popup.").openPopup();
      
      });
    </script>
